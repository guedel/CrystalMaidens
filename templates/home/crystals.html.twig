{% extends 'base.html.twig' %}

{% block title %}{{ 'Crystals search'|trans }}{% endblock %}

{% block body %}

{% if crystals|length > 0 %}
<h2 class="mb-5">{{ 'Crystals'|trans }}</h2>
<div class="row">
  <div class="col-12 col-lg-8">
    <table id="tblCrystals" class="table table-hover" data-order='[[ 4, "desc"], [5, "desc"]]' data-page-length='20'>
      <thead>
      <tr>
        <th>{{'Crystal'|trans}}</th>
        <th>{{'Campaign'|trans}}</th>
        <th>{{'Hard ?'|trans}}</th>
        <th>{{'Step'|trans}}</th>
        <th>{{'Minimum'|trans}}</th>
        <th>{{'Maximum'|trans}}</th>
      </tr>
    </thead>
    <tbody>
    {% for c in crystals %}
      <tr>
        <td>{{ c.nom }}</td>
        <td>{{ c.campagne }}</td>
        <td>{% if c.difficile %}{{'yes'|trans}}{% endif %}</td>
        <td>{{ c.etape }}</td>
        <td>{{ c.minimum }}</td>
        <td>{{ c.maximum }}</td>
      </tr>
    {% endfor %}
    </tbody>
    </table>
  </div>
</div>
{% else %}
<h2 class="mb-5">{{'No Crystal found'|trans}}</h2>
{% endif %}
{% endblock %}
