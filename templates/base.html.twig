<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}Crystal Maidens{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

    </head>
    <body>
        <header class="header">
            <h1 class="sr-only">
                Crystal Maidens Helper
            </h1>
            <nav class="navbar navbar-expand-xl navbar-light bg-light">
                <div class="container mt-4 mb-3">
                    <a class="navbar-brand mr-4 pr-2" href="{{ path('homepage') }}">
                        Crystal Maidens Helper
                    </a>
                    <button class="navbar-toggler border-0" type="button" data-toggle="collapse" data-target="#header-menu" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Show/Hide navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="header-menu">
                        <ul class="navbar-nav ml-auto">
                            {% if app.user %}
                            {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item mr-3">
                                <a class="nav-link" href="{{ path('admin') }}">
                                    Admin
                                </a>
                            </li>
                            {% endif %}
                            <li class="nav-item mr-3">
                                <a class="nav-link" href="{{ path('app_logout') }}" >Log out</a>
                            </li>
                            {% else %}
                            <li class="nav-item mr-3">
                                <a class="nav-link" href="{{ path('app_login') }}" >Log in</a>
                            </li>
                            <li class="nav-item mr-3">
                                <a class="nav-link" href="{{ path('app_register') }}" >Register</a>
                            </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </nav>


        </header>
        <main role="main" class="container mt-5">
            {% block body %}{% endblock %}
        </main>
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
        <footer class="container-fluid text-center">
            <p>Footer Text</p>
          </footer>
    </body>
</html>
